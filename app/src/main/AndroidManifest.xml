        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AFGProject"
        android:name=".MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".OrganizationHome"
            android:exported="false" />
